<body>  
  <p id="notice"></p>
  <h1>Books</h1>
  

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  
  </table>


<h2>New book</h2>
<%= form_with model: @book, url: books_path, local:true do |f| %>

<h3>Title</h3>
  <%= f.text_field :title %>
  
<h3>Body</h3>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>

<% end %>



